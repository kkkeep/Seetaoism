<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailSrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.mr.k.mvp.widgets.NestedScrollingDetailContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.mr.k.mvp.widgets.NestedScrollingWebView
            android:id="@+id/detailWebView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="nested_scroll_webview" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">


            <ImageView
                style="@style/SeeWay.HorizontalLine"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="@id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/text_detail_share"
                android:textColor="@color/gray_10"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpUsage" />

            <Button
                android:id="@+id/detailPageShareWechat"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/ic_news_detail_share_wechat"
                app:layout_constraintEnd_toStartOf="@+id/detailPageShareSina"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/detailPageShareSina" />

            <Button
                android:id="@+id/detailPageShareSina"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_news_detail_share_weibo"
                app:layout_constraintEnd_toStartOf="@+id/detailPageShareQQ"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/detailPageShareWechat"
                app:layout_constraintTop_toTopOf="@+id/detailPageShareQQ" />

            <Button
                android:id="@+id/detailPageShareQQ"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_news_detail_share_qq"
                app:layout_constraintEnd_toStartOf="@+id/detailPageShareMoments"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/detailPageShareSina"
                app:layout_constraintTop_toTopOf="@+id/detailPageShareMoments" />

            <Button
                android:id="@+id/detailPageShareMoments"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="38dp"
                android:background="@drawable/ic_news_detail_share_moments"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/detailPageShareQQ"
                app:layout_constraintTop_toBottomOf="@id/textView2" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:text="@string/text_detail_you_may_be_want_to_look"
                android:textColor="@color/gray_10"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailPageShareMoments" />

            <ImageView
                style="@style/SeeWay.HorizontalLine"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detailRelativeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:tag="nested_scroll_recyclerview" />


    </com.mr.k.mvp.widgets.NestedScrollingDetailContainer>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>

