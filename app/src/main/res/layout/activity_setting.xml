<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".home.set.SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.shehuan.niv.NiceImageView
                android:id="@+id/close"
                android:layout_alignParentLeft="true"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_back"
                app:is_circle="true" />
            <TextView
                android:textColor="#FF282B2E "
                android:textSize="18sp"
                android:text="设置"
                android:layout_marginRight="15dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fff4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/clean_cach"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="强力清除缓存"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#282B2E "
                app:rv_backgroundColor="@color/white"
                app:rv_backgroundPressColor="#fff4f4f4" />
            <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#ffd6d8da" />
            <com.flyco.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:clickable="true"
                android:gravity="center_vertical"
                app:rv_backgroundColor="@color/white"
                app:rv_backgroundPressColor="#fff4f4f4">

                <TextView
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="首页焦点图自动轮播"
                    android:textColor="#282B2E " />

<!--                <com.suke.widget.SwitchButton-->
<!--                    android:id="@+id/lunbo_Button"-->
<!--                    android:layout_width="32dp"-->
<!--                    android:layout_height="16dp"-->
<!--                    app:sbIsChecked="false"-->
<!--                    app:sbMarginBottom="2dp"-->
<!--                    app:sbMarginLeft="0dp"-->
<!--                    app:sbMarginRight="2dp"-->
<!--                    app:sbMarginTop="2dp" />-->

            </com.flyco.roundview.RoundLinearLayout>


              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#ffd6d8da" />

            <com.flyco.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:clickable="true"
                android:gravity="center_vertical"
                app:rv_backgroundColor="@color/white"
                app:rv_backgroundPressColor="#fff4f4f4">

                <TextView
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="推送开关"
                    android:textSize="16sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#282B2E " />
                <Switch
                    android:textColor="#fff4f4f4"
                    android:id="@+id/push_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </com.flyco.roundview.RoundLinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fff4f4f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/check_updata"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="检查更新"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#282B2E "
                app:rv_backgroundColor="@color/white"
                app:rv_backgroundPressColor="#fff4f4f4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffd6d8da" />

            <com.flyco.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:clickable="true"
                android:gravity="center_vertical"
                app:rv_backgroundColor="@color/white"
                app:rv_backgroundPressColor="#fff4f4f4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="意见反馈"
                    android:textSize="16sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#282B2E " />

                <TextView
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="16sp"
                    android:text="客服热线：010-58760804"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#9B9C9E " />

            </com.flyco.roundview.RoundLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffd6d8da" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/recommend"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="向朋友推荐本应用"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#282B2E "
                app:rv_backgroundColor="@color/white"
                app:rv_backgroundPressColor="#fff4f4f4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#fff4f4f4" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/outlogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="44dp"
            android:layout_marginRight="44dp"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white"
            app:rv_backgroundColor="#000000"
            app:rv_backgroundPressColor="@color/gray_3"
            app:rv_isRadiusHalfHeight="true"
            app:rv_isRippleEnable="false"
            app:rv_strokeColor="#000000"
            app:rv_strokePressColor="@color/gray_3"
            app:rv_strokeWidth="1dp"
            app:rv_textPressColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:gravity="center"
        android:text="见道1.0.0"
        android:textColor="#9B9C9E "
        android:textSize="12sp"
        app:rv_textPressColor="@color/gray" />
</LinearLayout>