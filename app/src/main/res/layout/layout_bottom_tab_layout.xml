<?xml version="1.0" encoding="utf-8"?>
<com.seetaoism.widgets.bottomtablaout.BottomTabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFE1E1E1"
        />


    <com.seetaoism.widgets.bottomtablaout.BottomTab
        android:id="@+id/tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toStartOf="@+id/tab2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.seetaoism.widgets.bottomtablaout.TabIcon
            android:layout_marginTop="1dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/tab_recommend_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/text_main_tab_home"
            android:textSize="10dp"
            tools:text="推荐" />
    </com.seetaoism.widgets.bottomtablaout.BottomTab>


    <com.seetaoism.widgets.bottomtablaout.BottomTab
        android:id="@+id/tab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toStartOf="@+id/tab3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tab1"
        app:layout_constraintTop_toTopOf="@+id/tab1">

        <com.seetaoism.widgets.bottomtablaout.TabIcon
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/tab_video_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="10dp"
            android:text="@string/text_main_tab_video"
            tools:text="视频" />
    </com.seetaoism.widgets.bottomtablaout.BottomTab>


    <com.seetaoism.widgets.bottomtablaout.BottomTab
        android:id="@+id/tab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toStartOf="@+id/tab5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tab2"
        app:layout_constraintTop_toTopOf="@+id/tab2">

        <com.seetaoism.widgets.bottomtablaout.TabIcon
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/tab_special_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="10dp"
            android:text="@string/text_main_tab_topic"
            tools:text="专题" />
    </com.seetaoism.widgets.bottomtablaout.BottomTab>



    <com.seetaoism.widgets.bottomtablaout.BottomTab
        android:id="@+id/tab5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tab3"
        app:layout_constraintTop_toTopOf="@+id/tab3">

        <com.seetaoism.widgets.bottomtablaout.TabIcon
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/tab_mine_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="10dp"
            android:text="@string/text_main_tab_mine"
            tools:text="我" />
    </com.seetaoism.widgets.bottomtablaout.BottomTab>


</com.seetaoism.widgets.bottomtablaout.BottomTabLayout>