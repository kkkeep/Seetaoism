<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.seetaoism.widgets.MatchScrollParentCLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="设置密码"
                    android:textColor="#282B2E "
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/et_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:hint="新密码"
                    android:inputType="textPassword"
                    android:maxLength="11"
                    android:textSize="16sp" />

                <com.seetaoism.widgets.CleanEditTextButton
                    android:id="@+id/iv_cleanPhone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/ic_clean" />

                <com.seetaoism.widgets.TogglePasswordButton
                    android:id="@+id/update_close_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/iv_cleanPhone1" />


                <TextView
                    android:id="@+id/login_iv_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/et_phoneNumber"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/et_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:textSize="16sp" />

                <com.seetaoism.widgets.CleanEditTextButton
                    android:id="@+id/iv_cleanPhone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_clean" />

                <com.seetaoism.widgets.TogglePasswordButton
                    android:id="@+id/update_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/iv_cleanPhone2" />

                <TextView
                    android:id="@+id/login_iv_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/et_verify"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_5" />
            </RelativeLayout>

            <com.mr.k.mvp.kotlin.widget.EditTextButton

                android:id="@+id/register_btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="49dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/login_button_rounder_bg_selector"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="17dp"
                tools:enabled="false" />
        </LinearLayout>
    </com.seetaoism.widgets.MatchScrollParentCLayout>


</ScrollView>